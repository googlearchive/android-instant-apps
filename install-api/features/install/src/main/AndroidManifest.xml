<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.instantappsamples.feature.install"
    android:targetSandboxVersion="2">

    <application>

        <activity
            android:name="com.instantappsamples.feature.install.InstallApiActivity"
            android:label="@string/title_activity_store"
            android:theme="@style/AppTheme">

            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter
                android:autoVerify="true"
                android:order="2">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:path="/" />
                <data android:host="install-api.instantappsample.com" />
            </intent-filter>

            <meta-data
                android:name="default-url"
                android:value="https://install-api.instantappsample.com/" />

        </activity>

    </application>

</manifest>
